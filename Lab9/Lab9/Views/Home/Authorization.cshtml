<link rel="stylesheet" href="~/css/authorization.css" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="in-full-screen modal-background p-absolute br-50">

</div>

<div class="in-full-screen modal-window p-absolute">
    <div class="row justify-content-center  bg-transparent">
        <form id="login-form">
            <div class="form-group">
                <label for="login-email">Email</label>
                <input type="email" class="form-control" id="login-email" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label for="login-password">Password</label>
                <input type="password" class="form-control" id="login-password" placeholder="Enter password" required>
            </div>
            <button type="submit" class="btn" style="background-color: rgb(64, 179, 162); width:100%;">Enter</button>
            <p class="mt-3">Don`t have an account? <a asp-controller="Home" asp-action="Registration">Register</a></p>
        </form>
    </div>
</div>
</div>