@model Car
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@if (Model.Id != 0)
{
    <div class="container mt-5">
        <form method="post" action="PutCurrentCar" id="form">
            <div class="mb-3">
                <label for="id" class="form-label">Id:</label>
                <input type="text" class="form-control" id="id" name="id" readonly value="@Model.Id">
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.Name">
            </div>
            <div class="mb-3">
                <label for="color" class="form-label">Color:</label>
                <input type="text" class="form-control" id="color" name="color" value="@Model.Color">
            </div>
            <div class="mb-3">
                <label for="publisher" class="form-label">Publisher:</label>
                <input type="text" class="form-control" id="publisher" name="publisher" value="@Model.Publisher">
            </div>
            <div class="mb-3">
                <label for="year" class="form-label">Publish year:</label>
                <input type="number" class="form-control" id="year" name="year" value="@Model.Year">
            </div>
            <div class="mb-3">
                <label for="engine" class="form-label">Engine capacity:</label>
                <input type="number" class="form-control" id="engine" name="engine" value="@Model.EngineCapacity">
            </div>
            <div class="justify-content-between flex-grow-1 d-flex">
                <input type="hidden" name="action" id="action" value="change" />
                <button type="submit" class="btn btn-primary">Change</button>
                <button class="btn btn-primary" onclick="btnClick()">Delete</button>
            </div>
        </form>
    </div>
}
else
{
    <div class="container mt-5">
        <form method="post" action="AddCar" id="form">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="color" class="form-label">Color:</label>
                <input type="text" class="form-control" id="color" name="color">
            </div>
            <div class="mb-3">
                <label for="publisher" class="form-label">Publisher:</label>
                <input type="text" class="form-control" id="publisher" name="publisher">
            </div>
            <div class="mb-3">
                <label for="year" class="form-label">Publish year:</label>
                <input type="number" class="form-control" id="year" name="year">
            </div>
            <div class="mb-3">
                <label for="engine" class="form-label">Engine capacity:</label>
                <input type="number" class="form-control" id="engine" name="engine">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
}

<script name="Scripts">
    function btnClick(event) {
        document.querySelector("#action").value = "delete";
        document.querySelector("#form").submit();
    }
</script>